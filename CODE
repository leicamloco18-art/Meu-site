<script>
const canvas = document.getElementById('chart-bg');
const ctx = canvas.getContext('2d');
canvas.width = window.innerWidth;
canvas.height = window.innerHeight;
let candles = [];
function createCandle(x) {
    return { x, y: Math.random() * (canvas.height - 200) + 100, h: Math.random() * 60 + 20, up: Math.random() > 0.5, s: Math.random() * 0.4 + 0.1 };
}
for(let i=0; i<canvas.width; i+=25) candles.push(createCandle(i));
function animate() {
    ctx.clearRect(0,0,canvas.width, canvas.height);
    candles.forEach(c => {
        ctx.fillStyle = c.up ? "#00FF8808" : "#FF4D4D08";
        ctx.fillRect(c.x, c.y, 15, c.h);
        ctx.fillRect(c.x + 7, c.y - 10, 1, c.h + 20);
        c.x -= c.s;
        if(c.x < -20) c.x = canvas.width;
    });
    requestAnimationFrame(animate);
}
animate();

let currentProfit = 0;
function updateProfit() {
    currentProfit += (Math.random() * 15);
    if(currentProfit > 2450) currentProfit = 2450;
    document.getElementById('live-profit').innerText = "+ $" + currentProfit.toLocaleString('en-US', {minimumFractionDigits: 2});
    if(currentProfit < 2450) setTimeout(updateProfit, Math.random() * 1800);
}
updateProfit();
</script>

